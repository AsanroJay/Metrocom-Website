<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Products</title>

    <!-- Bootstrap + DataTables CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/manageProducts.css">
</head>
<body>
    <div class="admin-wrapper">
        <%- include('partials/sidebar') %>

        <div class="content" style="margin-left:240px; padding:30px;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="mb-0">Manage Products</h3>
            <button class="btn btn-md add-item-btn"  data-bs-toggle="modal" data-bs-target="#addProductModal">
                Add Product
            </button>
        </div>

        <!-- Products Table -->
        <div class="table-responsive">
            <table id="productsTable" class="table table-striped align-middle" style="table-layout: fixed; width: 100%; display:none;">
            <thead class="table-light">
                <tr>
                <th style="width: 40%;">Product</th>
                <th style="width: 15%;">SKU</th>
                <th style="width: 15%;">Category</th>
                <th style="width: 15%;">Subcategory</th>
                <th class="text-center" style="width: 15%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                <tr data-id="<%= product._id %>">
                    <!-- Product -->
                    <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                    <div class="d-flex align-items-center">
                        <img 
                        src="<%= (product.images && product.images[0]) || '/assets/logo.png' %>" 
                        alt="Product Image"
                        class="me-3 rounded"
                        style="width:50px; height:50px; object-fit:cover;">
                        <div>
                        <strong><%= product.name %></strong>
                        </div>
                    </div>
                    </td>

                    <!-- SKU -->
                    <td class="align-middle text-start" style="white-space: nowrap;">
                    <%= product.sku %>
                    </td>

                    <!-- Category -->
                    <td class="align-middle text-start" style="white-space: nowrap;">
                    <%= product.category || '—' %>
                    </td>

                    <!-- Subcategory -->
                    <td class="align-middle text-start" style="white-space: nowrap;">
                    <%= product.subcategory || '—' %>
                    </td>

                    <!-- Actions -->
                    <td class="text-center align-middle">
                    <button class="btn btn-sm btn-outline-primary edit-btn" data-id="<%= product._id %>">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger delete-btn" data-id="<%= product._id %>">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                    </td>
                </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
    </div>

    <!-- Edit Product Modal -->
    <div class="modal fade" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form id="editProductForm">
            <div class="modal-header">
                <h5 class="modal-title" id="editProductModalLabel">Edit Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="editProductId" name="productId">

                <!-- Row 1 -->
                <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label for="editProductName" class="form-label">Product Name</label>
                    <input type="text" class="form-control" id="editProductName" name="name" required>
                </div>

                <div class="col-md-6">
                    <label for="editProductSKU" class="form-label">SKU</label>
                    <input type="text" class="form-control" id="editProductSKU" name="sku" required>
                </div>
                </div>

                <!-- Row 2 -->
                <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label for="editProductStatus" class="form-label">Status</label>
                    <select class="form-select" id="editProductStatus" name="status" required>
                    <option value="available">Available</option>
                    <option value="unavailable">Unavailable</option>
                    <option value="discontinued">Discontinued</option>
                    <option value="out of order">Out of Stock</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="editProductCategory" class="form-label">Category</label>
                    <input type="text" class="form-control" id="editProductCategory" name="category">
                </div>
                </div>

                <!-- Row 3 -->
                <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label for="editProductSubcategory" class="form-label">Subcategory</label>
                    <input type="text" class="form-control" id="editProductSubcategory" name="subcategory">
                </div>

                <div class="col-md-6">
                    <label for="editProductCardDesc" class="form-label">Card Description</label>
                    <input type="text" class="form-control" id="editProductCardDesc" name="card_description">
                </div>
                </div>

                <!-- Row 4 -->
                <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label for="editProductColors" class="form-label">Colors (comma-separated)</label>
                    <input type="text" class="form-control" id="editProductColors" name="color">
                </div>

                <div class="col-md-6">
                    <label for="editProductImages" class="form-label">Image URLs (comma-separated)</label>
                    <input type="text" class="form-control" id="editProductImages" name="images">
                </div>
                </div>

                <!-- Description -->
                <div class="mb-3">
                <label for="editProductDescription" class="form-label">Descriptions (one per line)</label>
                <textarea class="form-control" id="editProductDescription" name="description" rows="3"></textarea>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
            </form>
        </div>
        </div>
    </div>


    <!-- Add Product Modal -->
    <div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
        <form id="addProductForm" enctype="multipart/form-data">
            <div class="modal-header">
            <h5 class="modal-title" id="addProductModalLabel">Add Product</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
            <!-- Product Images -->
            <div class="mb-3">
            <label class="form-label fw-bold">Product Images</label>

            <!-- Main Image -->
            <div class="mb-3">
                <label class="form-label">Main Image</label>
                <div id="mainImageContainer" class="position-relative rounded border p-2 d-flex justify-content-center align-items-center" style="width:100%; min-height:200px; border-style:dashed; cursor:pointer;">
                <img id="mainPreview" src="" alt="Main Image" class="img-fluid rounded" style="max-height:250px; display:none; object-fit:cover;">
                <button type="button" id="removeMainImage" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-2 d-none">
                    ✕ Remove
                </button>
                <span id="mainPlaceholder" class="text-muted">Click or drag an image here</span>
                </div>
            </div>

            <!-- Additional Images -->
            <div class="mb-3">
                <label class="form-label">Additional Images</label>
                <div id="additionalImages" class="d-flex flex-wrap gap-2">
                <!-- Thumbnails inserted dynamically -->
                <div id="addImageBox"
                    class="border border-2 border-dashed rounded d-flex justify-content-center align-items-center"
                    style="width:100px; height:100px; cursor:pointer;">
                    <span class="fs-4 text-muted">+</span>
                </div>
                </div>
            </div>

            <input type="file" id="imageInput" multiple accept="image/*" hidden>
            
            <small class="text-muted d-block mt-2">
                First image will be used as the main display. You can add up to 3 additional images.
            </small>
            </div>



            <!-- Row 1 -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                <label for="addProductName" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="addProductName" name="name" required>
                </div>
                <div class="col-md-6">
                <label for="addProductSKU" class="form-label">SKU</label>
                <input type="text" class="form-control" id="addProductSKU" name="sku" required>
                </div>
            </div>

            <!-- Row 2 -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                <label for="addProductStatus" class="form-label">Status</label>
                <select class="form-select" id="addProductStatus" name="status" required>
                    <option value="available">Available</option>
                    <option value="unavailable">Unavailable</option>
                    <option value="discontinued">Discontinued</option>
                    <option value="out of order">Out of Stock</option>
                </select>
                </div>
                <div class="col-md-6">
                <label for="addProductCategory" class="form-label">Category</label>
                <input type="text" class="form-control" id="addProductCategory" name="category">
                </div>
            </div>

            <!-- Row 3 -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                <label for="addProductSubcategory" class="form-label">Subcategory</label>
                <input type="text" class="form-control" id="addProductSubcategory" name="subcategory">
                </div>
                <div class="col-md-6">
                <label for="addProductCardDesc" class="form-label">Card Description</label>
                <input type="text" class="form-control" id="addProductCardDesc" name="card_description">
                </div>
            </div>

            <!-- Row 4 -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                <label for="addProductColors" class="form-label">Colors (comma-separated)</label>
                <input type="text" class="form-control" id="addProductColors" name="color">
                </div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="addProductDescription" class="form-label">Descriptions (one per line)</label>
                <textarea class="form-control" id="addProductDescription" name="description" rows="3"></textarea>
            </div>
            </div>

            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-success">Add Product</button>
            </div>
        </form>
        </div>
    </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://kit.fontawesome.com/1d3e4093d2.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/manageProducts.js" defer></script>
</body>
</html>
