<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/cart.css">
    <link rel="stylesheet" href="/css/frame.css">
  </head>
  <body>
    <%- include('partials/navbar'); %>
    <section class="cart-page container my-5">
    <div class="row">
        <!-- Left Side: Cart Items -->
        <div class="col-lg-7 cart-items">
        <h3 class="section-title">Your Cart</h3>

        <!-- Example Product -->
        <div class="cart-item d-flex align-items-center mb-4 p-3">
        <img src="/assets/logo.png" alt="Product" class="cart-img me-3">
        <div class="cart-info flex-grow-1">
            <h5 class="cart-name mb-1">Sample Product</h5>
        </div>
        <div class="cart-actions d-flex align-items-center">
            <input type="number" class="form-control qty-input me-2" value="1" min="1">
            <button class="btn btn-remove">âœ–</button>
        </div>
        </div>

        <!-- Repeat for more products -->
        </div>

        <!-- Right Side: Quota Form -->
        <div class="col-lg-5 quota-form p-4">
        <h4 class="section-title">Request a Quota</h4>
        <form>
            <div class="mb-3">
            <label class="form-label">Name<span class="required">*</span></label>
            <input type="text" class="form-control" required>
            </div>

            <div class="mb-3">
            <label class="form-label">Company</label>
            <input type="text" class="form-control">
            </div>

            <div class="mb-3">
            <label class="form-label">Email<span class="required">*</span></label>
            <input type="email" class="form-control" required>
            </div>

            <div class="mb-3">
            <label class="form-label">Contact Number<span class="required">*</span></label>
            <input type="contact-no" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-quota w-100 btn-primary">Ask for Quota</button>
        </form>
        </div>
    </div>
</section>

    <%- include('partials/footer'); %>
  </body>
</html>
